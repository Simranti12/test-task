{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "version": {
        "type": "string",
        "pattern": "^(\\d+\\.){2}\\d+(-\\w+)?$"
      },
      "dependencies": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },
      "devDependencies": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      }
    },
    "required": ["name", "version"],
    "additionalProperties": false
  }
  